<form id="slideShowFrom" method="post" action="<%=consV.webApi.setSlideShow%>"
encType="multipart/form-data" onsubmit="<%=formOnSubmit%>">

	<div class="form-group mr-0 pr-0 row">
		<label class="Font18px mr-3" for="slideShowFormPage">
			<%= i18n.__("برای صفحه ی") %>
		</label>

		<select id="slideShowFormPage" name="slideShowFormPage" class="custom-select col FontIranSans mr-3" onchange="<%=ATChange%>">
			<option value="home" selected><%= i18n.__("خانه") %></option>
		<%for(let key in consV.database.enc)
		{
			if(typeof consV.database.enc[key].CollName != 'undefined')
			{%>
				<option value="portals_<%=consV.database.enc[key].name%>"><%= i18n.__(consV.database.enc[key].title) %></option>
		<% }
		}%>
		</select>
		<label class="Font18px mr-3" for="slideShowFormSN">
			<%= i18n.__("برای اسلایده") %>
		</label>
		<select id="slideShowFormSN" name="slideShowFormSN" class="custom-select col FontIranSans mr-3" onchange="<%=ATChange%>">
			<option value="0" selected><%= i18n.__("اول")%></option>
			<option value="1"><%= i18n.__("دوم")%></option>
			<option value="2"><%= i18n.__("سوم")%></option>
		</select>
		<label class="Font18px mr-3" for="slideShowFormLang">
			<%= i18n.__("زبان")%>
		</label>
		<select id="slideShowFormLang" name="slideShowFormLang" class="custom-select col FontIranSans mr-3" onchange="<%=ATChange%>">
			<%consV.site.langs.inArray.forEach( (el , i) =>
			{%>
				<option value="<%=el%>" <%if(el == lang){%>selected<%}%> ><%=i18n.__(consV.site.langs[el].name)%></option>
			<%});%>
		</select>
	</div>
	<hr>
	
	<div class="form-group">
		<label for="file" class="custom-file">
			<%= i18n.__("انتخاب عکس")%>
		</label>			
		<input id="file" name="file" class="form-control-file" type="file" value="انتخاب">
	</div>
	<div class="form-group mr-0 pr-0 row">
		<label class="col-12 pr-0 Font18px">
			<%= i18n.__("یک ،دو یا حداکثر سه کلمه که عکس رو توصیف کنه")%>
		</label>
		<input id="slideShowFormImageAlt1" name="slideShowFormImageAlt1" class="col-3 ml-3 form-control form-control-sm" type="text">
		<input id="slideShowFormImageAlt2" name="slideShowFormImageAlt2" class="col-3 ml-3 form-control" type="text">
		<input id="slideShowFormImageAlt3" name="slideShowFormImageAlt3" class="col-3 ml-3 form-control" type="text">
	</div>

	<div class="form-group">
		<label class="Font18px" for="slideShowFormTitle">
			<%= i18n.__("تیتر اسلاید") %>
			<%- include( consV.layouts.questionMark , {QMTitlle: "تیتر اسلاید شو" , QMContent: "متنی که پایین عکس نمایش داده میشه. در صورتی که چیزی ننویسید، متن درخت نمایش، در نظر گرفته میشه."} ) %> 
		</label>
		<input id="slideShowFormTitle" name="slideShowFormTitle" class="form-control" type="text">
	</div>
	<div class="form-group">
		<label class="Font18px" for="slideShowFormTitle">
			<%= i18n.__("انتخاب مقاله") %>
		</label>
		<hr>
		<%- include(consV.layouts.panel.chooseNodeTree , {})%>
	</div>
	<button id="slideShowFormSubmit" type="submit" class="btn btn-primary col-md-3"><%= i18n.__("ثبت") %></button>
</form>